<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    android:layout_height="match_parent"
    tools:context=".fragment.search.fragment_search">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <androidx.appcompat.widget.SearchView
            android:layout_width="match_parent"
            android:layout_margin="10dp"
            android:id="@+id/search_song"
            android:layout_height="wrap_content"
            app:searchIcon="@drawable/icon_search"
            app:searchHintIcon="@drawable/icon_search"
            app:closeIcon="@drawable/icon_clear"
            android:theme="@style/theme_text_search"
            android:background="@drawable/custom_border"
            app:defaultQueryHint="Search"
            app:queryBackground="@drawable/custom_border"
            app:queryHint="Search music,playlist,artist..."/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rcv_all_song"
            android:layout_marginTop="10dp"/>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>